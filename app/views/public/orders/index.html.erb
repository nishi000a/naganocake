<div class="container text-center">

  <h2 style="width: 250px;background-color: #EEEEEE; text-align: center;">注文履歴一覧</h2>

    <table class="table-bordered">
      <tr>
        <th style="width:150px;background-color: #EEEEEE;">注文日</th>
        <th style="width:150px;background-color: #EEEEEE;">注文商品</th>
        <th style="width:150px;background-color: #EEEEEE;">支払金額</th>
        <th style="width:150px;background-color: #EEEEEE;">ステータス</th>
        <th style="width:150px;background-color: #EEEEEE;">注文詳細</th>
      </tr>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "注文詳細", order_path(order), class:"btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>