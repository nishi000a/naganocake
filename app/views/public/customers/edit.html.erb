<div class="container">
  <h2 class="text-center" style="width: 300px;background-color: #EEEEEE;">会員情報編集</h2>


    <%= form_with model: @customer, url: customers_path do |f| %>
      <div class="row" style="margin-top: 50px;">
        <div>
          <div class="field"><%= f.label :氏名 %></div>
          <div class="field"><%= f.label :フリガナ %></div>
          <div class="field"><%= f.label :郵便番号 %></div>
          <div class="field"><%= f.label :住所 %></div>
          <div class="field"><%= f.label :電話番号 %></div>
          <div class="field"><%= f.label :メールアドレス %></div>
        </div>

        <div style="margin-left: 50px;">
          <div class="field"><%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>&emsp;<%= f.text_field :last_name, autofocus: true, autocomplete: "email" %></div>
          <div class="field"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>&emsp;<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %></div>
          <div class="field"><%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %></div>
          <div class="field"><%= f.text_field :address, autofocus: true, autocomplete: "email" %></div>
          <div class="field"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %></div>
          <div class="field"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
      </div>

      <div class="row" style="margin-top: 80px;">
        <%= f.submit "編集内容を保存", class: "btn btn-primary"%>&ensp;
    <% end %>

        <%= button_to "退会する", customers_withdraw_path, method: :get, class: "btn btn-danger" %>
      </div>

</div>