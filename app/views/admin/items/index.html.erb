<div class="container text-center">
  <h2 style="width: 180px;background-color: #EEEEEE; text-align: center;">商品一覧</h2>

  <div class="text-right">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-light btn-lg rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div><br>

  <table class="table table-hover">
    <thead>
      <tr style="background-color: #EEEEEE;">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item) do %><%= item.name %><% end %></td>
        <td><%= item.price %></td>
        <td>
          <% if item.is_active? %>
              <span class="text-success">販売中</span>
          <% else %>
             <span class="text-secondary">販売停止中</span>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>

  <%= paginate @items %>

</div>


