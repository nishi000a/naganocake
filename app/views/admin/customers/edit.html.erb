<div class="container text-center">
  <h2 style="width: 300px;background-color: #EEEEEE; text-align: center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

  <div class="row">
    <%= form_for(@customer, url:admin_customer_path) do |f| %>

      <div class="field"><%= f.label :会員ID %><%= f.text_field :id, autofocus: true, autocomplete: "id"%></div>

      <div class="field">
        <%= f.label :氏名 %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>

      <div class="field"><%= f.label :郵便番号 %><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
      <div class="field"><%= f.label :住所 %><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
      <div class="field"><%= f.label :電話番号 %><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number"%></div>
      <div class="field"><%= f.label :メールアドレス %><%= f.email_field :email, autofocus: true, autocomplete: "email"%></div>


      <div class="field text-left">
        <label><%= f.radio_button :is_deleted, "有効" ,checked: "checked" %> 有効会員 </label>
        <label><%= f.radio_button :is_deleted, "無効" %> 退会済み</label>
      </div>

      <div class="text-right"><%= f.submit "変更を保存する", class:"btn btn-primary" %></div>
    <% end %>
    </table>
  </div>
</div>