<div class="container text-center">
    <h2 style="width: 200px;background-color: #EEEEEE; text-align: center;">注文履歴一覧</h2>

  <table class="table table-hover">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.last_name %></td>
        <td><%= order.status %></td>
        <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>
  
  <%= paginate @orders %>

</div>
